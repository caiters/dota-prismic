        nav.main-nav
          ul.main-nav__list
            li.main-nav__item
              a(href="/about-the-guild") About
            li.main-nav__item
              a(href="/roster") Roster
            li.main-nav__item
              a(href="/raiding") Raiding Information
            li.main-nav__item
              a(href="http://www.coretheloothound.com", target="_blank") Raid Sign-Up
            li.main-nav__item
              a(href="/join") How to Join
            li.main-nav__item
              a(href="/rules") Guild Rules
      main.site-body
        block body
