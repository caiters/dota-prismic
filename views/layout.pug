html(lang='en')
  head
      title Daughters of the Alliance: An all-female World of Warcraft guild on US-Bronzebeard
      link(rel="stylesheet", href="/stylesheets/normalize.css")
      link(rel="stylesheet", href="/stylesheets/dota.css")
      link(rel="stylesheet", href="/stylesheets/vendors/help.min.css")
      link(rel="stylesheet", href="https://use.typekit.net/xqm5lao.css")
      meta(name="viewport", content="width=device-width, initial-scale=1")

      // Required for Previews and Experiments
      script(src="https://code.jquery.com/jquery-1.12.4.min.js")
